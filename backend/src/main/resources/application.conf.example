ktor {
    deployment {
        port = 8080
        host = "0.0.0.0"
    }
    
    application {
        modules = [ com.example.agent_app.backend.Application.module ]
    }
    
    google {
        oauth {
            # Google OAuth 클라이언트 ID (환경 변수 GOOGLE_CLIENT_ID 또는 local.properties의 GOOGLE_WEB_CLIENT_ID 사용)
            client_id = ${?GOOGLE_CLIENT_ID}
            
            # Google OAuth 클라이언트 Secret (환경 변수 GOOGLE_CLIENT_SECRET 또는 local.properties의 GOOGLE_CLIENT_SECRET 사용)
            client_secret = ${?GOOGLE_CLIENT_SECRET}
            
            # OAuth Redirect URI (환경 변수 OAUTH_REDIRECT_URI 또는 local.properties의 OAUTH_REDIRECT_URI 사용)
            # 기본값: http://localhost:8080/admin/auth/google/callback
            # 에뮬레이터: http://localhost:8080/admin/auth/google/callback
            # 실제 기기: http://localhost:8080/admin/auth/google/callback (Google Cloud Console에 등록 필요)
            redirect_uri = ${?OAUTH_REDIRECT_URI}
        }
    }
    
    # 보안 설정
    security {
        # 허용된 Origin (CORS 설정용, 필요시)
        allowed_origins = ${?ALLOWED_ORIGINS}
    }
}

